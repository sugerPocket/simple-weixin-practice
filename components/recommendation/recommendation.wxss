.recommendation {
  display: flex;
  flex-direction: column;
  padding-top: 50rpx;
}

.recommendation > .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
}

.recommendation .decoration {
  height: 12rpx;
  width: 60rpx;
}

.recommendation .title-text {
  font-size: 30rpx;
  margin: 0 20rpx;
}

.recommendation .view-more {
  position: absolute;
  font-size: 24rpx;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}
.recommendation .recommendation-list {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.recommendation .recommendation-item {
  padding: 30rpx 0;
  border-bottom: 1px solid rgb(221, 221, 221)
}

.recommendation .recommendation-item > image {
  max-width: 280rpx;
  max-height: 280rpx;
  vertical-align: middle;
}

.recommendation .recommendation-item-meta {
  margin-left: 48rpx;
  display: inline-block;
  height: 100%;
  margin-top: 60rpx;
  vertical-align: top;
  width: 362rpx;
}

.recommendation .recommendation-item-meta > .brand {
  font-size: 32rpx;
  font-weight: bolder;
}

.recommendation .recommendation-item-meta > .name {
  font-size: 28rpx;
  margin-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommendation .recommendation-item-meta > .price {
  font-size: 26rpx;
  margin-top: 40rpx;
  font-weight: 900;
  position: relative;
}

.recommendation .recommendation-item-meta .arrow {
  width: 18rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.recommendation .recommendation-item-meta > .price-off {
  font-size: 22rpx;
  color: rgb(255, 33, 91);
  font-weight: 700;
}
